<?xml version="1.0" encoding="utf-8"?>
<lennie.org.lennie.loading.CtrlSunView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controller_sun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/rym_sunview_to_top" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rym_sunview_width"
        android:layout_gravity="top" >

        <lennie.org.lennie.loading.SunView
            android:id="@+id/small_sunView"
            android:layout_width="@dimen/rym_sunview_width"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_gravity="center"
            >
        </lennie.org.lennie.loading.SunView>
    </FrameLayout>

    <lennie.org.lennie.loading.BulletView
        android:id="@+id/bullet1"
        android:layout_width="@dimen/rym_sunview_bullet_width"
        android:layout_height="@dimen/rym_sunview_bullet_width"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/rym_sunview_bullet1_to_top"
        android:visibility="gone" >
    </lennie.org.lennie.loading.BulletView>

    <lennie.org.lennie.loading.BulletView
        android:id="@+id/bullet2"
        android:layout_width="@dimen/rym_sunview_bullet_width"
        android:layout_height="@dimen/rym_sunview_bullet_width"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/rym_sunview_bullet2_to_top"
        android:visibility="gone" >
    </lennie.org.lennie.loading.BulletView>

    <lennie.org.lennie.loading.BulletView
        android:id="@+id/bullet3"
        android:layout_width="@dimen/rym_sunview_bullet_width"
        android:layout_height="@dimen/rym_sunview_bullet_width"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/rym_sunview_bullet3_to_top"
        android:visibility="gone" >
    </lennie.org.lennie.loading.BulletView>

    <lennie.org.lennie.loading.TargetView
        android:id="@+id/center_sun_circle"
        android:layout_width="@dimen/rym_sunview_target_width"
        android:layout_height="@dimen/rym_sunview_target_width"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/rym_sunview_target_to_top"
        >
    </lennie.org.lennie.loading.TargetView>

    <TextView
        android:id="@+id/rym_game_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/rym_sunview_game_tip_to_top"
        android:text="@string/rym_loading_game_tip"
        android:textColor="@color/rym_loading_text_tip"
        android:visibility="invisible"
        android:textSize="@dimen/rym_tip_game_text_size"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/rym_game_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rym_game_tip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/rym_sunview_game_click_to_top"
        android:text="@string/rym_loading_game_click"
        android:textColor="@color/rym_loading_text"
        android:visibility="invisible"
        android:textSize="@dimen/rym_tip_click_srceen_text"
        tools:ignore="SpUsage" />

</lennie.org.lennie.loading.CtrlSunView>